{
  "id": "00000000-0000-0000-0000-000000000004",
  "version": 3,
  "version_string": "2.0.0",
  "lifecycle": "stable",
  "compatibility": {
    "adl_spec": ">=1.0.0",
    "previous_versions": []
  },
  "change_log": {
    "type": "breaking",
    "summary": "Major upgrade: Added global memory scope and changed tool signatures",
    "details": [
      "BREAKING: Changed search_documents tool to require index_id parameter",
      "BREAKING: Removed deprecated query_analyzer tool",
      "Added global memory scope for cross-user knowledge sharing",
      "Migrated to append-only retention policy for audit compliance",
      "Added new summarize_documents tool with enhanced capabilities"
    ]
  },
  "name": "research_assistant_agent",
  "description": "A research assistant that helps users find, analyze, and summarize documents from multiple knowledge bases.",
  "role": "Research Assistant",
  "llm": "openai",
  "llm_settings": {
    "temperature": 0.3,
    "max_tokens": 8192
  },
  "owner": "research-team",
  "rag": [
    {
      "id": "research-papers-001",
      "name": "Research Papers",
      "rag_type": "doc",
      "virtual_index_path": "/rags/research-papers",
      "location_type": "local",
      "remote_path": null,
      "metadata": {}
    },
    {
      "id": "internal-docs-002",
      "name": "Internal Documentation",
      "rag_type": "doc",
      "virtual_index_path": "/rags/internal-docs",
      "location_type": "local",
      "remote_path": null,
      "metadata": {}
    }
  ],
  "tools": [
    {
      "name": "search_documents",
      "description": "Search for documents across all available indices.",
      "category": "data_access.search.query",
      "subcategory": "full_text",
      "parameters": [
        {
          "name": "query",
          "type": "string",
          "description": "Search query.",
          "minLength": 1,
          "required": true
        },
        {
          "name": "index_id",
          "type": "string",
          "description": "Specific index ID to search (required in v2.0.0).",
          "required": true
        },
        {
          "name": "limit",
          "type": "number",
          "description": "Maximum number of results to return.",
          "minimum": 1,
          "required": false,
          "default": 10
        }
      ],
      "invocation": {
        "type": "python_function",
        "function": "search_documents"
      },
      "returns": {
        "type": "ListResult",
        "schema": {
          "$ref": "#/$defs/StandardReturnTypes/ListResult"
        },
        "description": "Returns paginated list of documents",
        "examples": [
          {
            "success": true,
            "data": [
              {
                "id": "doc_001",
                "title": "Research Paper on AI",
                "content": "Abstract of the research paper...",
                "metadata": {
                  "author": "Dr. Smith",
                  "date": "2026-01-15"
                }
              },
              {
                "id": "doc_002",
                "title": "Study on Machine Learning",
                "content": "Summary of the study...",
                "metadata": {
                  "author": "Dr. Johnson",
                  "date": "2026-01-20"
                }
              }
            ],
            "pagination": {
              "page": 1,
              "per_page": 10,
              "total": 45,
              "total_pages": 5,
              "has_next": true,
              "has_prev": false
            }
          }
        ]
      }
    },
    {
      "name": "summarize_documents",
      "description": "Generate a comprehensive summary of multiple documents.",
      "category": "ai_ml.text.summarization",
      "subcategory": "extractive",
      "parameters": [
        {
          "name": "document_ids",
          "type": "array",
          "description": "List of document IDs to summarize.",
          "required": true
        },
        {
          "name": "summary_type",
          "type": "string",
          "description": "Type of summary: 'brief', 'detailed', or 'executive'.",
          "enum": [
            "brief",
            "detailed",
            "executive"
          ],
          "required": false,
          "default": "detailed"
        }
      ],
      "invocation": {
        "type": "python_function",
        "function": "summarize_documents"
      },
      "returns": {
        "type": "StringValue",
        "schema": {
          "$ref": "#/$defs/StandardReturnTypes/StringValue"
        },
        "description": "Returns generated summary",
        "examples": [
          {
            "success": true,
            "value": "This research paper examines the impact of AI on modern healthcare systems. The study finds that AI-powered diagnostic tools have improved accuracy by 25% and reduced patient wait times by 40%. Key recommendations include increased investment in AI infrastructure and training for healthcare professionals."
          }
        ]
      }
    }
  ],
  "memory": {
    "type": "semantic",
    "scope": "global",
    "backend": "vector",
    "retention": {
      "policy": "append-only",
      "duration": "365d"
    },
    "write_policy": "explicit",
    "read_policy": "on_demand",
    "privacy": {
      "pii": false,
      "encryption": true
    }
  }
}
