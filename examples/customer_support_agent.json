{
  "id": "00000000-0000-0000-0000-000000000002",
  "version": 1,
  "version_string": "1.0.0",
  "lifecycle": "stable",
  "compatibility": {
    "adl_spec": ">=1.0.0",
    "previous_versions": []
  },
  "change_log": {
    "type": "non-breaking",
    "summary": "Initial release with episodic memory support for conversation history",
    "details": [
      "Added episodic memory for session-based conversation tracking",
      "Configured 7-day TTL retention policy",
      "Enabled encryption at rest for privacy compliance"
    ]
  },
  "name": "customer_support_agent",
  "description": "A customer support agent that maintains conversation history across sessions to provide personalized assistance.",
  "role": "Customer Support Specialist",
  "llm": "openai",
  "llm_settings": {
    "temperature": 0.7,
    "max_tokens": 2048
  },
  "owner": "support-team",
  "rag": [],
  "tools": [
{
      "name":"lookup_order",
      "description":"Look up customer order details by order ID.",
      "category":"data_access.database.query",
      "subcategory":"sql",
      "parameters":[
         {
           "name":"order_id",
           "type":"string",
           "pattern":"^ORD-[0-9]+$",
           "description":"The order ID to look up.",
           "required":true
         }
      ],
      "invocation":{
         "type":"python_function",
         "function":"lookup_order"
      },
      "returns":{
         "type":"EntityResult",
         "schema":{"$ref":"#/$defs/StandardReturnTypes/EntityResult"},
         "description":"Returns order entity with details",
         "examples":[
            {
               "id":"ord_12345",
               "type":"order",
               "attributes":{
                  "order_number":"ORD-12345",
                  "customer_id":"usr_67890",
                  "status":"pending",
                  "total":99.99,
                  "created_at":"2026-02-15T10:30:00Z"
               },
               "relationships":{
                  "customer":{
                     "data":{
                        "id":"usr_67890",
                        "type":"customer"
                     }
                  }
               }
            }
         ]
      }
    },
{
      "name":"update_ticket_status",
      "description":"Update the status of a support ticket.",
      "parameters":[
         {
           "name":"ticket_id",
           "type":"string",
           "description":"The ticket ID to update.",
           "required":true
         },
         {
           "name":"status",
           "type":"string",
           "enum":["open","in_progress","resolved","closed"],
           "description":"The new status (e.g., 'open', 'in_progress', 'resolved').",
           "required":true
         }
      ],
      "invocation":{
         "type":"python_function",
         "function":"update_ticket_status"
      },
      "returns":{
         "type":"VoidResult",
         "schema":{"$ref":"#/$defs/StandardReturnTypes/VoidResult"},
         "description":"Returns operation status",
         "examples":[
            {
               "success":true,
               "message":"Ticket status updated successfully"
            }
         ]
      }
}
   ],
  "memory": {
    "type": "episodic",
    "scope": "user",
    "backend": "vector",
    "retention": {
      "policy": "ttl",
      "duration": "7d"
    },
    "write_policy": "implicit",
    "read_policy": "always",
    "privacy": {
      "pii": true,
      "encryption": true
    }
  }
}
