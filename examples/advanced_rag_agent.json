{
  "id": "advanced-rag-agent-001",
  "version": 1,
  "version_string": "2.0.0",
  "lifecycle": "stable",
  "name": "Advanced RAG Research Assistant",
  "description": "A research assistant with advanced RAG capabilities including hierarchical retrieval and hybrid search.",
  "role": "Research Assistant",
  "llm": "openai",
  "llm_settings": {
    "temperature": 0.3,
    "max_tokens": 4096
  },
  "rag": [
    {
      "id": "doc-index-001",
      "name": "Document Knowledge Base",
      "rag_type": "doc",
      "virtual_index_path": "/knowledge/docs",
      "location_type": "local",
      "remote_path": null,
      "metadata": {
        "created_at": "2026-02-15",
        "document_count": 1000,
        "language": "en"
      },
      "hierarchical_config": {
        "enabled": true,
        "levels": [
          {
            "level": 1,
            "chunk_size": 2048,
            "overlap": 256,
            "parent_index": ""
          },
          {
            "level": 2,
            "chunk_size": 1024,
            "overlap": 128,
            "parent_index": "doc-index-001"
          },
          {
            "level": 3,
            "chunk_size": 512,
            "overlap": 64,
            "parent_index": "doc-index-001"
          }
        ]
      },
      "search_config": {
        "vector_search": {
          "enabled": true,
          "top_k": 10,
          "similarity_threshold": 0.7
        },
        "keyword_search": {
          "enabled": true,
          "top_k": 10,
          "bm25_weight": 0.5
        },
        "hybrid_strategy": "reciprocal_rank_fusion",
        "fusion_weight": 0.6
      },
      "cross_file_references": {
        "enabled": true,
        "reference_types": ["citation", "semantic"],
        "max_depth": 3
      }
    }
  ],
  "tools": [
    {
      "name": "search_documents",
      "description": "Search documents using advanced RAG with hierarchical retrieval and hybrid search.",
      "category": "data_access.document_search",
      "parameters": [
        {
          "name": "query",
          "type": "string",
          "description": "Search query.",
          "required": true
        },
        {
          "name": "index_id",
          "type": "string",
          "description": "RAG index ID to search.",
          "required": true
        },
        {
          "name": "use_hierarchical",
          "type": "boolean",
          "description": "Use hierarchical retrieval.",
          "required": false
        },
        {
          "name": "use_hybrid",
          "type": "boolean",
          "description": "Use hybrid search (vector + keyword).",
          "required": false
        }
      ],
      "returns": {
        "type": "ListResult",
        "description": "Search results with hierarchical and hybrid search.",
        "schema": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "document_id": {
                "type": "string"
              },
              "content": {
                "type": "string"
              },
              "score": {
                "type": "number"
              },
              "level": {
                "type": "integer"
              },
              "references": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  ],
  "memory": {
    "type": "episodic",
    "scope": "session",
    "backend": "vector",
    "retention": {
      "policy": "ttl",
      "duration": "7d"
    },
    "write_policy": "implicit",
    "read_policy": "on_demand",
    "privacy": {
      "pii": false,
      "encryption": true
    }
  }
}
