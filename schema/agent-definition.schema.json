{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/agent-definition.json",
  "title": "Agent Definition",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for this agent (UUID or similar)."
    },
    "version": {
      "type": "integer",
      "minimum": 1,
      "description": "Version number of this agent definition. For semantic versioning, use version_string field."
    },
    "version_string": {
      "type": "string",
      "description": "Semantic version string (e.g., '1.2.0') for the agent definition.",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9.]+)?$"
    },
    "lifecycle": {
      "type": "string",
      "enum": ["stable", "beta", "deprecated", "experimental"],
      "description": "Lifecycle status of this agent version."
    },
    "compatibility": {
      "type": "object",
      "description": "Compatibility information for this agent version.",
      "additionalProperties": false,
      "properties": {
        "adl_spec": {
          "type": "string",
          "description": "Minimum ADL spec version required (e.g., '>=1.0.0')."
        },
        "previous_versions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of compatible previous version patterns."
        }
      }
    },
    "change_log": {
      "type": "object",
      "description": "Change log information for this version.",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": ["breaking", "non-breaking", "patch"],
          "description": "Type of change in this version."
        },
        "summary": {
          "type": "string",
          "description": "Human-readable summary of changes."
        },
        "details": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Detailed list of changes."
        }
      },
      "required": ["type"]
    },
    "name": {
      "type": "string",
      "description": "Human-readable name of the agent."
    },
    "description": {
      "type": "string",
      "description": "Detailed description of the agent\u2019s purpose and behavior."
    },
    "role": {
      "$ref": "./components/agent/role.json"
    },
    "agent_roles": {
      "type": "object",
      "description": "Multi-agent role configuration for v2 agents. Defines primary role, secondary roles, capabilities, constraints, and communication protocols.",
      "additionalProperties": false,
      "properties": {
        "primary_role": {
          "type": "string",
          "enum": ["coordinator", "worker", "supervisor", "critic"],
          "description": "Primary role for this agent in multi-agent coordination."
        },
        "secondary_roles": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["coordinator", "worker", "supervisor", "critic"]
          },
          "maxItems": 2,
          "description": "Optional secondary roles for this agent. Maximum 2 secondary roles allowed."
        },
        "capabilities": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the capability."
              },
              "type": {
                "type": "string",
                "enum": ["management", "coordination", "execution", "validation", "advisory"],
                "description": "Type of capability."
              },
              "scope": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Scope of operations for this capability."
              },
              "targets": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["coordinator", "worker", "supervisor", "critic"]
                },
                "description": "Target roles this capability can operate on."
              }
            },
            "required": ["name", "type"]
          },
          "description": "List of capabilities for this role."
        },
        "constraints": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "max_coordinators": {
              "type": "integer",
              "minimum": 1,
              "description": "Maximum number of coordinators allowed in agent group."
            },
            "can_execute_tasks": {
              "type": "boolean",
              "description": "Whether this agent can execute domain-specific tasks."
            },
            "can_modify_configuration": {
              "type": "boolean",
              "description": "Whether this agent can modify agent group configuration."
            },
            "must_report_to": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["coordinator", "worker", "supervisor", "critic"]
              },
              "description": "Roles this agent must report to."
            },
            "communication_channels": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["direct", "broadcast", "pubsub"]
              },
              "description": "Communication channels this agent can use."
            }
          },
          "description": "Constraints applied to this role."
        },
        "communication_protocols": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "message_format": {
              "type": "string",
              "enum": ["json", "protobuf", "avro"],
              "description": "Message format for communication."
            },
            "channels": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["direct", "broadcast", "pubsub"]
              },
              "description": "Available communication channels."
            },
            "latency_requirements": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "max_latency_ms": {
                  "type": "integer",
                  "minimum": 0,
                  "description": "Maximum acceptable latency in milliseconds."
                },
                "priority": {
                  "type": "string",
                  "enum": ["low", "medium", "high", "critical"],
                  "description": "Priority level for messages."
                }
              },
              "description": "Latency requirements for communication."
            },
            "reliability": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "ack_required": {
                  "type": "boolean",
                  "description": "Whether acknowledgment is required for messages."
                },
                "retry_policy": {
                  "type": "string",
                  "enum": ["none", "fixed", "exponential_backoff"],
                  "description": "Retry policy for failed messages."
                }
              },
              "description": "Reliability settings for communication."
            }
          },
          "description": "Communication protocol configuration."
        }
      },
      "required": ["primary_role"]
    },
    "llm": {
      "type": "string",
      "description": "Identifier of the primary LLM provider or model family used by this agent (e.g., 'openai')."
    },
    "llm_settings": {
      "type": "object",
      "description": "Model configuration settings for the LLM.",
      "additionalProperties": false,
      "properties": {
        "temperature": {
          "type": "number",
          "minimum": 0,
          "description": "Sampling temperature for the LLM."
        },
        "max_tokens": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum tokens to generate in a single completion."
        }
      },
      "required": ["temperature", "max_tokens"]
    },
    "owner": {
      "type": "string",
      "description": "Owner or namespace for this agent (e.g., 'admin')."
    },
    "document_index_id": {
      "type": "string",
      "description": "Primary RAG index identifier associated with this agent, if any."
    },
    "rag": {
      "type": "array",
      "description": "Associated RAG index configurations this agent can use.",
      "items": {
        "$ref": "./components/rag/index.json"
      }
    },
    "tools": {
      "type": "array",
      "description": "Tools that this agent can call during reasoning and execution.",
      "items": {
        "$ref": "./components/tool/definition.json"
      }
    },
    "memory": {
      "$ref": "./components/memory/config.json"
    },
    "execution_constraints": {
      "type": "object",
      "description": "Execution constraints and capability negotiation for v2 agents. Defines time, memory, resource, cost, and security constraints.",
      "additionalProperties": false,
      "properties": {
        "time_constraints": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "max_execution_time_ms": {
              "type": "integer",
              "minimum": 1,
              "description": "Maximum total execution time in milliseconds."
            },
            "max_tool_invocation_time_ms": {
              "type": "integer",
              "minimum": 1,
              "description": "Maximum time per tool invocation in milliseconds."
            },
            "max_llm_inference_time_ms": {
              "type": "integer",
              "minimum": 1,
              "description": "Maximum time for LLM inference in milliseconds."
            },
            "timeout_action": {
              "type": "string",
              "enum": ["terminate", "continue", "warn"],
              "description": "Action to take on timeout."
            }
          },
          "description": "Time constraints for agent execution."
        },
        "memory_constraints": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "max_memory_mb": {
              "type": "integer",
              "minimum": 1,
              "description": "Maximum memory usage in megabytes."
            },
            "max_context_tokens": {
              "type": "integer",
              "minimum": 1,
              "description": "Maximum context window size in tokens."
            },
            "max_tool_output_size_mb": {
              "type": "integer",
              "minimum": 1,
              "description": "Maximum tool output size in megabytes."
            },
            "memory_eviction_policy": {
              "type": "string",
              "enum": ["lru", "fifo", "random"],
              "description": "Policy for memory eviction."
            }
          },
          "description": "Memory constraints for agent execution."
        },
        "resource_quotas": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "max_llm_calls_per_hour": {
              "type": "integer",
              "minimum": 1,
              "description": "Maximum LLM API calls per hour."
            },
            "max_tool_invocations_per_task": {
              "type": "integer",
              "minimum": 1,
              "description": "Maximum tool invocations per task."
            },
            "max_network_requests_per_minute": {
              "type": "integer",
              "minimum": 1,
              "description": "Maximum network requests per minute."
            },
            "max_file_operations_per_task": {
              "type": "integer",
              "minimum": 1,
              "description": "Maximum file operations per task."
            }
          },
          "description": "Resource quotas for agent execution."
        },
        "cost_constraints": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "max_cost_per_task_usd": {
              "type": "number",
              "minimum": 0,
              "description": "Maximum cost per task in USD."
            },
            "max_cost_per_hour_usd": {
              "type": "number",
              "minimum": 0,
              "description": "Maximum cost per hour in USD."
            },
            "cost_tracking_enabled": {
              "type": "boolean",
              "description": "Enable cost tracking."
            },
            "cost_alert_threshold_usd": {
              "type": "number",
              "minimum": 0,
              "description": "Alert threshold in USD."
            }
          },
          "description": "Cost constraints for agent execution."
        },
        "security_constraints": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "allowed_domains": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Whitelist of allowed domains."
            },
            "blocked_domains": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Blacklist of blocked domains."
            },
            "max_file_size_mb": {
              "type": "integer",
              "minimum": 1,
              "description": "Maximum file size in megabytes."
            },
            "allowed_file_types": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Allowed file extensions."
            },
            "require_encryption": {
              "type": "boolean",
              "description": "Require encryption for sensitive data."
            }
          },
          "description": "Security constraints for agent execution."
        },
        "capability_negotiation": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable capability negotiation."
            },
            "protocol": {
              "type": "string",
              "enum": ["handshake", "discovery", "declaration"],
              "description": "Negotiation protocol type."
            },
            "timeout_ms": {
              "type": "integer",
              "minimum": 1,
              "description": "Negotiation timeout in milliseconds."
            },
            "fallback_strategy": {
              "type": "string",
              "enum": ["degrade", "fail", "warn"],
              "description": "Fallback strategy if negotiation fails."
            }
          },
          "description": "Capability negotiation configuration."
        },
        "capability_requirements": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "required": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Capability name."
                  },
                  "version": {
                    "type": "string",
                    "description": "Required version (e.g., '>=1.0.0')."
                  },
                  "provider": {
                    "type": "string",
                    "description": "Required provider (optional)."
                  }
                },
                "required": ["name"]
              },
              "description": "Required capabilities."
            },
            "optional": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Capability name."
                  },
                  "version": {
                    "type": "string",
                    "description": "Required version (e.g., '>=1.0.0')."
                  }
                },
                "required": ["name"]
              },
              "description": "Optional capabilities."
            }
          },
          "description": "Capability requirements for agent execution."
        },
        "enforcement": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "level": {
              "type": "string",
              "enum": ["strict", "moderate", "lenient"],
              "description": "Enforcement level."
            },
            "violation_action": {
              "type": "string",
              "enum": ["terminate", "continue", "degrade"],
              "description": "Action on constraint violation."
            },
            "logging_enabled": {
              "type": "boolean",
              "description": "Enable constraint violation logging."
            },
            "alert_on_violation": {
              "type": "boolean",
              "description": "Alert on constraint violation."
            }
          },
          "description": "Constraint enforcement configuration."
        }
      },
      "description": "Execution constraints and capability negotiation."
    }
  },
  "required": [
    "name",
    "description",
    "role",
    "llm",
    "llm_settings",
    "tools"
  ]
}